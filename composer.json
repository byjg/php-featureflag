{
    "name": "byjg/featureflag",
    "description": "Allows you to enable or disable features in your application and dispatch the proper code based on the flags.",
    "autoload": {
        "psr-4": {
            "ByJG\\FeatureFlag\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
  "prefer-stable": true,
  "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit",
      "psalm": "vendor/bin/psalm --threads=1"
    },
    "require": {
      "php": ">=8.3 <8.6",
      "psr/container": "^1.0|^2.0|^3.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^10.5|^11.5",
      "vimeo/psalm": "^5.9|^6.13"
    }
}